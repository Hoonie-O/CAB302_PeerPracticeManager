<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cab302.peerpractice.Controllers.NotesController"
            stylesheets="@styles/modern.css">
    <center>
        <SplitPane fx:id="rootSplit" orientation="HORIZONTAL">
            <items>
                <StackPane fx:id="notes">
                    <ListView fx:id="notesList"/>
                    <Button fx:id="addNoteButton" text="+ Add Note" onAction="#addNote"
                            styleClass="modern-button"
                            style="-fx-background-radius: 20; -fx-font-size: 12;">
                        <StackPane.margin>
                            <Insets bottom="12" left="12"/>
                        </StackPane.margin>
                        <StackPane.alignment>
                            BOTTOM_LEFT
                        </StackPane.alignment>
                    </Button>
                    <Button fx:id="removeNoteButton" text="Delete" onAction="#removeNote"
                            style="-fx-background-color: -fx-danger; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 12; -fx-padding: 8 16;">
                        <StackPane.margin>
                            <Insets bottom="12" right="12"/>
                        </StackPane.margin>
                        <StackPane.alignment>
                            BOTTOM_RIGHT
                        </StackPane.alignment>
                    </Button>
                </StackPane>
                <StackPane fx:id="chapters">
                    <ListView fx:id="chaptersList" />
                    <Button fx:id="addChapterButton" text="+ Add Chapter" onAction="#addChapter"
                            styleClass="modern-button"
                            style="-fx-background-radius: 20; -fx-font-size: 12;">
                        <StackPane.margin>
                            <Insets bottom="12" left="12"/>
                        </StackPane.margin>
                        <StackPane.alignment>
                            BOTTOM_LEFT
                        </StackPane.alignment>
                    </Button>
                    <Button fx:id="removeChapterButton" text="Delete" onAction="#removeChapter"
                            style="-fx-background-color: -fx-danger; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 12; -fx-padding: 8 16;">
                        <StackPane.margin>
                            <Insets bottom="12" right="12"/>
                        </StackPane.margin>
                        <StackPane.alignment>
                            BOTTOM_RIGHT
                        </StackPane.alignment>
                    </Button>
                </StackPane>
                <StackPane fx:id="contentStack" xmlns:fx="http://javafx.com/fxml">
                    <WebView fx:id="contentWebView"/>
                    <Button fx:id="editButton" text="âœ Edit"
                        styleClass="modern-button-accent"
                        style="-fx-background-radius: 20; -fx-font-size: 16;"
                        onAction="#editContents">
                        <StackPane.margin>
                            <Insets bottom="14" right="14"/>
                        </StackPane.margin>
                        <StackPane.alignment>
                            BOTTOM_RIGHT
                        </StackPane.alignment>
                    </Button>
                </StackPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
