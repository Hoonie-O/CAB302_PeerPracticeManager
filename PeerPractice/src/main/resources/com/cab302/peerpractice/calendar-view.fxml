<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cab302.peerpractice.Controllers.CalendarController"
            prefWidth="1280"
            prefHeight="720">

    <!-- Top Header -->
    <top>
        <fx:include source="header-layout.fxml" fx:id="header"/>
    </top>

    <!-- Left Sidebar -->
    <left>
        <fx:include source="sidebar-layout.fxml" fx:id="menu"/>
    </left>

    <!-- Right Sidebar -->
    <right>
        <fx:include source="profile-layout.fxml" fx:id="profile"/>
    </right>

    <!-- Center: Calendar -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="10">

            <!-- Toggle buttons (from main) -->
            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <ToggleButton fx:id="sessionViewButton" text="Study Sessions"/>
                    <ToggleButton fx:id="availabilityViewButton" text="Availability"/>
                </children>
                <padding>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </HBox>

            <!-- Month navigation -->
            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <Button fx:id="prevButton" onAction="#onPreviousMonth" text="&lt;"/>
                    <Label fx:id="monthYearLabel" text="Month Year">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Button fx:id="nextButton" onAction="#onNextMonth" text="&gt;"/>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/>
                </padding>
            </HBox>

            <!-- Calendar grid -->
            <GridPane fx:id="calendarGrid"
                      alignment="CENTER"
                      gridLinesVisible="false"
                      hgap="1.0" vgap="1.0"
                      VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </GridPane>

            <!-- Back button -->
            <HBox alignment="CENTER">
                <children>
                    <Button fx:id="backToMenuButton" onAction="#onBackToMenu" text="Back to Menu"/>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </HBox>
        </VBox>
    </center>
</BorderPane>
