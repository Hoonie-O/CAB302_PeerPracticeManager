<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cab302.peerpractice.Controllers.CalendarController"
            prefWidth="1280"
            prefHeight="720">

    <!-- Top Header -->
    <top>
        <VBox>
            <BorderPane>
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <left>
                    <Button fx:id="menuButton" text="Menu" onAction="#onToggleMenu"/>
                </left>
                <center>
                    <Label text="Peer Practice - GROUPTEN"/>
                </center>
                <right>
                    <HBox spacing="8">
                        <Button fx:id="profileButton" text="Profile" onAction="#onToggleProfile"/>
                    </HBox>
                </right>
            </BorderPane>
            <Separator/>
        </VBox>
    </top>

    <!-- Left Sidebar Menu -->
    <left>
        <BorderPane fx:id="menu" prefWidth="180">
            <right>
                <Separator orientation="VERTICAL"/>
            </right>
            <center>
                <VBox alignment="TOP_CENTER" spacing="8">
                    <padding>
                        <Insets top="12" right="12" bottom="12" left="12"/>
                    </padding>
                    <Label text="Menu"/>
                    <Separator/>
                    <Button text="Study Group" onAction="#onOpenGroups" prefWidth="180"/>
                    <Button text="Calendar" onAction="#onOpenCalendar" prefWidth="180"/>
                    <Button text="Friends" prefWidth="180"/>
                </VBox>
            </center>
        </BorderPane>
    </left>

    <!-- Right Sidebar Profile -->
    <right>
        <BorderPane fx:id="profile" prefWidth="180">
            <left>
                <Separator orientation="VERTICAL"/>
            </left>
            <center>
                <VBox alignment="TOP_CENTER" spacing="12">
                    <padding>
                        <Insets top="12" right="12" bottom="12" left="12"/>
                    </padding>
                    <Label text="Profile"/>
                    <Separator/>
                    <VBox alignment="CENTER_LEFT" spacing="6">
                        <Label text="John Doe"/>
                        <Label text="#johndoe123"/>
                        <ComboBox fx:id="availabilityStatus" prefWidth="180">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Online"/>
                                    <String fx:value="Away"/>
                                    <String fx:value="Busy"/>
                                    <String fx:value="Offline"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                    <Separator/>
                    <Button text="Edit profile" prefWidth="180"/>
                    <Button text="Settings" prefWidth="180"/>
                    <Button text="Logout" onAction="#onBackToLogin" prefWidth="180"/>
                </VBox>
            </center>
        </BorderPane>
    </right>

    <!-- Center: Calendar -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="prevButton" onAction="#onPreviousMonth" text="&lt;"/>
                <Label fx:id="monthYearLabel" text="Month Year">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Button fx:id="nextButton" onAction="#onNextMonth" text="&gt;"/>
            </HBox>

            <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="1.0" vgap="1.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </GridPane>
        </VBox>
    </center>
</BorderPane>