<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.cab302.peerpractice.Controllers.ForgotPasswordController"
           stylesheets="@styles/modern.css"
           style="-fx-background-color: -fx-background;"
           alignment="CENTER">
<VBox spacing="20"
      alignment="TOP_CENTER"
      styleClass="modern-card"
      maxWidth="450"
      minWidth="400">

    <padding>
        <Insets top="40"
                right="40"
                bottom="40"
                left="40"/>
    </padding>

    <Label text="Reset Your Password"
           styleClass="modern-label-title">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <Label text="Enter your email address to receive a password reset link"
           wrapText="true"
           styleClass="modern-label-caption">
        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
    </Label>

    <VBox spacing="8">
        <Label text="Email Address" styleClass="modern-label-body"/>
        <TextField fx:id="emailField"
                   promptText="example@email.com"
                   styleClass="modern-text-field"/>
    </VBox>

    <Button fx:id="sendButton"
            text="Send Reset Link"
            onAction="#onSendResetLink"
            maxWidth="Infinity"
            styleClass="modern-button">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </Button>

    <Button fx:id="backButton"
            text="Back to Login"
            onAction="#onBackToLogin"
            maxWidth="Infinity"
            styleClass="modern-button-secondary"/>

    <Label fx:id="messageLabel"
           textFill="#f44336"
           wrapText="true"
           maxWidth="Infinity"/>

</VBox>
</StackPane>
