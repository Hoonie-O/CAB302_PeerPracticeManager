<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cab302.peerpractice.Controllers.ForgotPasswordController"
      spacing="12"
      alignment="TOP_CENTER"
      prefHeight="720"
      prefWidth="480">

    <padding>
        <Insets top="24"
                right="56"
                bottom="24"
                left="56"/>
    </padding>

    <VBox alignment="CENTER">
        <Label text="Reset your password"
               style="-fx-font-size: 24px; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets top="20"
                        bottom="20"/>
            </VBox.margin>
        </Label>
    </VBox>

    <VBox alignment="CENTER_LEFT">
        <Label text="Enter you email address to receive reset password link">
            <VBox.margin>
                <Insets top="10"
                        bottom="10"/>
            </VBox.margin>
        </Label>
    </VBox>

    <VBox spacing="4">
        <Label text="Email:"/>
        <TextField fx:id="emailField"
                   promptText="example@email.com"/>
    </VBox>

    <HBox>
        <Button fx:id="sendButton"
                text="Send reset link"
                onAction="#onSendResetLink"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox>
        <Button fx:id="backButton"
                text="Back to Login"
                onAction="#onBackToLogin"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
    </HBox>

    <Label fx:id="messageLabel"
           textFill="red"/>

</VBox>
