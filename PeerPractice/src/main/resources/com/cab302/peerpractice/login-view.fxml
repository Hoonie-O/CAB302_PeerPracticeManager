<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.cab302.peerpractice.Controllers.LoginController"
           stylesheets="@styles/modern.css"
           style="-fx-background-color: -fx-background;"
           alignment="CENTER">
<VBox spacing="20"
      alignment="TOP_CENTER"
      styleClass="modern-card"
      maxWidth="450"
      minWidth="400">

    <padding>
        <Insets top="40"
                right="40"
                bottom="40"
                left="40"/>
    </padding>

    <Label text="Welcome Back"
           styleClass="modern-label-title">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <Label text="Sign in to continue"
           styleClass="modern-label-caption">
        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
    </Label>

    <VBox spacing="8">
        <Label text="Email or Username"
               styleClass="modern-label-body"/>
        <TextField fx:id="IDField"
                   styleClass="modern-text-field"
                   promptText="Enter your email or username"/>
    </VBox>

    <VBox spacing="8">
        <Label text="Password"
               styleClass="modern-label-body"/>
        <PasswordField fx:id="passwordField"
                       styleClass="modern-text-field"
                       promptText="Enter your password"/>
    </VBox>

    <HBox spacing="12"
          alignment="CENTER_LEFT">
        <CheckBox fx:id="rememberMe"
                  text="Remember me"/>
        <Region maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Hyperlink fx:id="forgotpasswordlink"
                   text="Forgot password?"
                   styleClass="modern-label-caption"/>
    </HBox>

    <Button fx:id="loginButton"
            text="Sign In"
            styleClass="modern-button"
            defaultButton="true"
            maxWidth="Infinity">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </Button>

    <HBox spacing="6"
          alignment="CENTER">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
        <Label text="Don't have an account?"
               styleClass="modern-label-body"/>
        <Hyperlink fx:id="signupLink"
                   text="Sign up"
                   style="-fx-font-weight: 600;"/>
    </HBox>

    <Label fx:id="messageLabel"
           textFill="red"
           wrapText="true"
           maxWidth="Infinity"/>

</VBox>
</StackPane>
