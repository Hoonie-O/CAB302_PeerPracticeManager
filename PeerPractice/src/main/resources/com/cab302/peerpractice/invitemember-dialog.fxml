<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cab302.peerpractice.Controllers.InviteMemberController"
            prefWidth="460">

    <VBox AnchorPane.topAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="10"
          AnchorPane.leftAnchor="10"
          spacing="10">

        <VBox spacing="8" VBox.vgrow="ALWAYS">
            <Label fx:id="titleLabel"
                   text="Type a username or email to add to this group. You can add up to 10 members."
                   wrapText="true"/>
            <HBox spacing="8">
                <TextField fx:id="inviteeField"
                           promptText="Enter username or email"
                           HBox.hgrow="ALWAYS"/>
                <Button fx:id="addButton"
                        text="Add"
                        prefWidth="60"
                        onAction="#onAdd"/>
            </HBox>

            <ListView fx:id="inviteesList"
                      VBox.vgrow="ALWAYS"
                      maxHeight="120"/>

        </VBox>

        <HBox spacing="8"
              alignment="CENTER_RIGHT">
            <Button fx:id="inviteButton"
                    text="Invite"
                    prefWidth="80"
                    onAction="#onInvite"/>
        </HBox>
    </VBox>
</AnchorPane>
