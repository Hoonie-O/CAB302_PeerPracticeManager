<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="fileContainer" spacing="10" prefWidth="600" prefHeight="500" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cab302.peerpractice.Controllers.GroupFileController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Upload Section -->
    <VBox spacing="8" styleClass="upload-section">
        <Label text="Upload Files" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

        <!-- Drag and Drop Zone -->
        <VBox fx:id="dropZone" alignment="CENTER" spacing="5"
              style="-fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-style: dashed; -fx-background-color: #f9f9f9; -fx-padding: 20;"
              prefHeight="100">
            <Label text="Drag and drop files here" style="-fx-font-size: 13px; -fx-text-fill: #666666;"/>
            <Label text="or" style="-fx-font-size: 11px; -fx-text-fill: #999999;"/>
            <Button fx:id="browseButton" text="Browse Files" onAction="#onBrowseFiles"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;"/>
        </VBox>

        <Label fx:id="uploadStatusLabel" text="" style="-fx-text-fill: #666666; -fx-font-size: 11px;"/>
    </VBox>

    <Separator/>

    <!-- Files List Section -->
    <VBox spacing="8" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Shared Files" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="refreshButton" text="Refresh" onAction="#onRefresh"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand;"/>
        </HBox>

        <ListView fx:id="filesListView" VBox.vgrow="ALWAYS" prefHeight="300">
            <placeholder>
                <Label text="No files shared yet" style="-fx-text-fill: #999999;"/>
            </placeholder>
        </ListView>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="8" alignment="CENTER_RIGHT">
        <Button fx:id="downloadButton" text="Download" onAction="#onDownloadFile"
                disable="true" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#onDeleteFile"
                disable="true" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>

</VBox>
