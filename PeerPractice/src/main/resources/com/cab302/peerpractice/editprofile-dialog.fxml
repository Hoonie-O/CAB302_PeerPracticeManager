<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cab302.peerpractice.Controllers.EditProfileController"
      spacing="12"
      stylesheets="@styles/modern.css">
    <padding>
        <Insets top="20"
                right="20"
                bottom="20"
                left="20"/>
    </padding>

    <GridPane hgap="12"
              vgap="12">
        <!-- Two columns -->
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"
                               minWidth="290"/>
            <ColumnConstraints hgrow="ALWAYS"
                               minWidth="290"/>
        </columnConstraints>

        <Separator/>
        <!-- First name -->
        <VBox spacing="6"
              GridPane.rowIndex="0"
              GridPane.columnIndex="0">
            <Label text="First name:" styleClass="modern-label-body"/>
            <TextField fx:id="firstNameField"
                       maxWidth="Infinity"
                       styleClass="modern-text-field"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="0"
              GridPane.columnIndex="1">
            <Label text="Last name:" styleClass="modern-label-body"/>
            <TextField fx:id="lastNameField"
                       maxWidth="Infinity"
                       styleClass="modern-text-field"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="1"
              GridPane.columnIndex="0">
            <Label text="Email:" styleClass="modern-label-body"/>
            <TextField fx:id="emailField"
                       disable="true"
                       editable="false"
                       maxWidth="Infinity"
                       styleClass="modern-text-field"
                       style="-fx-opacity: 0.6;"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="1"
              GridPane.columnIndex="1">
            <Label text="Username:" styleClass="modern-label-body"/>
            <TextField fx:id="usernameField"
                       maxWidth="Infinity"
                       styleClass="modern-text-field"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="2"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2">
            <Label text="Date of birth:" styleClass="modern-label-body"/>
            <DatePicker fx:id="dateOfBirthField"
                        maxWidth="Infinity"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="3"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2">
            <Label text="Phone number:" styleClass="modern-label-body"/>
            <TextField fx:id="phoneField"
                       maxWidth="Infinity"
                       styleClass="modern-text-field"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="4"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2">
            <Label text="Home address:" styleClass="modern-label-body"/>
            <TextField fx:id="addressField"
                       maxWidth="Infinity"
                       styleClass="modern-text-field"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="5"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2">
            <Label text="Institute:" styleClass="modern-label-body"/>
            <TextField fx:id="instituteField"
                       maxWidth="Infinity"
                       styleClass="modern-text-field"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="6"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2">
            <Label text="Biography:" styleClass="modern-label-body"/>
            <TextArea fx:id="bioField"
                      prefRowCount="3"
                      maxWidth="Infinity"
                      styleClass="modern-text-field"/>
        </VBox>

        <HBox alignment="CENTER_RIGHT"
              spacing="12"
              GridPane.rowIndex="7"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2">
            <Button text="Close"
                    onAction="#onClose"
                    minWidth="110"
                    styleClass="modern-button-secondary"/>
            <Button text="Save Changes"
                    onAction="#onSave"
                    minWidth="130"
                    styleClass="modern-button"/>
        </HBox>
    </GridPane>
</VBox>
