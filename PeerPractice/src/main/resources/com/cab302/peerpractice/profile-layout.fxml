<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="profile"
            xmlns:fx="http://javafx.com/fxml"
            minWidth="260"
            maxWidth="260"
            visible="false"
            managed="false"
            stylesheets="@styles/modern.css"
            styleClass="profile-panel">
    <left>
        <Separator orientation="VERTICAL"/>
    </left>
    <center>
        <VBox alignment="TOP_CENTER" spacing="16">
            <padding>
                <Insets top="20" right="16" bottom="20" left="16"/>
            </padding>

            <VBox alignment="CENTER" spacing="12" styleClass="profile-header">
                <VBox alignment="CENTER" spacing="2">
                    <Label text="ðŸ‘¤"
                           style="-fx-font-size: 48px;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="4">
                    <Label fx:id="userNameLabel"
                           text="John Doe"
                           styleClass="profile-name"/>
                    <Label fx:id="userUsernameLabel"
                           text="@johndoe123"
                           styleClass="profile-username"/>
                </VBox>

                <Label fx:id="userBioLabel"
                       text=""
                       wrapText="true"
                       maxWidth="200"
                       styleClass="profile-bio"
                       style="-fx-text-align: center;"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Status"
                       styleClass="profile-section-label"/>
                <ComboBox fx:id="availabilityStatus"
                          prefWidth="200"
                          promptText="Set your status"/>
            </VBox>

            <Separator prefWidth="200"/>

            <VBox spacing="10">
                <Button fx:id="editProfileButton"
                        text="âœ Edit Profile"
                        prefWidth="200"
                        styleClass="modern-button-secondary"/>
                <Button fx:id="settingsButton"
                        text="âš™ Settings"
                        prefWidth="200"
                        styleClass="modern-button-secondary"/>
                <Button fx:id="logoutButton"
                        text="ðŸšª Logout"
                        prefWidth="200"
                        style="-fx-background-color: -fx-surface-hover; -fx-text-fill: -fx-danger; -fx-background-radius: 8; -fx-padding: 10 20; -fx-font-weight: 600; -fx-cursor: hand;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
