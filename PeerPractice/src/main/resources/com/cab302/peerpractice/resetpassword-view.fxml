<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           stylesheets="@styles/modern.css"
           style="-fx-background-color: -fx-background;"
           alignment="CENTER">
<VBox fx:controller="com.cab302.peerpractice.Controllers.ResetPasswordController"
      spacing="20"
      alignment="TOP_CENTER"
      styleClass="modern-card"
      maxWidth="450"
      minWidth="400">

    <padding>
        <Insets top="40"
                right="40"
                bottom="40"
                left="40"/>
    </padding>

    <Label text="Create New Password"
           styleClass="modern-label-title">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <Label text="Choose a strong password for your account"
           styleClass="modern-label-caption">
        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
    </Label>

    <VBox spacing="8">
        <Label text="New Password" styleClass="modern-label-body"/>
        <PasswordField fx:id="newPasswordField"
                       promptText="Enter new password"
                       styleClass="modern-text-field"/>
    </VBox>

    <VBox spacing="8">
        <Label text="Confirm Password" styleClass="modern-label-body"/>
        <PasswordField fx:id="confirmPassword"
                       promptText="Confirm new password"
                       styleClass="modern-text-field"/>
    </VBox>

    <Button fx:id="confirmButton"
            text="Reset Password"
            onAction="#onConfirm"
            maxWidth="Infinity"
            styleClass="modern-button">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </Button>

    <Button fx:id="backToLogin"
            text="Back to Login"
            onAction="#onBackToLogin"
            maxWidth="Infinity"
            styleClass="modern-button-secondary"/>

    <Label fx:id="messageLabel"
           textFill="#f44336"
           wrapText="true"
           maxWidth="Infinity"/>
</VBox>
</StackPane>