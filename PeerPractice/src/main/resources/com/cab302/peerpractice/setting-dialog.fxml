<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cab302.peerpractice.Controllers.SettingController"
      spacing="8">
    <padding>
        <Insets top="12"
                right="12"
                bottom="12"
                left="12"/>
    </padding>

    <Label text="Date and Time"
           style="-fx-font-weight:bold;"/>
    <Separator/>

    <GridPane hgap="12"
              vgap="12">

        <!-- Two columns -->
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"
                               minWidth="260"/>
            <ColumnConstraints hgrow="ALWAYS"
                               minWidth="260"/>
        </columnConstraints>

        <!-- Date -->
        <VBox spacing="4"
              GridPane.rowIndex="0"
              GridPane.columnIndex="0">
            <Label text="Date format:"/>
            <ComboBox fx:id="dateFormatBox"
                      minWidth="260">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="MMMM d, yyyy"/>
                            <String fx:value="yyyy-MM-dd"/>
                            <String fx:value="MM/dd/yyyy"/>
                            <String fx:value="dd/MM/yyyy"/>
                        </FXCollections>
                    </items>
            </ComboBox>

            <!-- Date Format Preview -->
            <Label fx:id="dateFormatPreview"
                   text="Preview: 25/12/2023"
                   style="-fx-text-fill: #666666; -fx-font-style: italic;"/>
        </VBox>

        <!-- Time -->
        <VBox spacing="4"
              GridPane.rowIndex="0"
              GridPane.columnIndex="1">
            <Label text="Time format:"/>
            <ComboBox fx:id="timeFormatBox"
                      minWidth="260">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="h:mm a"/>
                        <String fx:value="HH:mm"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Time Format Preview -->
            <Label fx:id="timeFormatPreview"
                   text="Preview: 14:30"
                   style="-fx-text-fill: #666666; -fx-font-size: 11px; -fx-font-style: italic;"/>
        </VBox>
    </GridPane>

        <VBox spacing="4"/>
        <Label text="Change password"
               style="-fx-font-weight:bold;"/>

    <Separator/>
        <VBox spacing="8">

            <!-- Old password -->
            <VBox spacing="4">
                <Label text="Old password:"/>
                <PasswordField fx:id="oldPasswordField"/>
            </VBox>

            <!-- New password -->
            <VBox spacing="4">
                <Label text="New password:"/>
                <PasswordField fx:id="newPasswordField"/>
            </VBox>

            <!-- Confirm new password -->
            <VBox spacing="4">
                <Label text="Confirm new password:"/>
                <PasswordField fx:id="confirmPasswordField"/>
            </VBox>
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER_RIGHT"
              spacing="8">

            <padding>
                <Insets top="14"/>
            </padding>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Close"
                    onAction="#onClose"
                    minWidth="110"/>
            <Button text="Save"
                    onAction="#onSave"
                    minWidth="110"/>
        </HBox>
</VBox>
