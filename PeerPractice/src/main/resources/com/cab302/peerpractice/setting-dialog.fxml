<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cab302.peerpractice.Controllers.SettingController"
      spacing="16"
      stylesheets="@styles/modern.css">
    <padding>
        <Insets top="20"
                right="20"
                bottom="20"
                left="20"/>
    </padding>

    <Label text="Date and Time"
           styleClass="modern-label-heading"/>
    <Separator/>

    <GridPane hgap="12"
              vgap="12">

        <!-- Two columns -->
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"
                               minWidth="260"/>
            <ColumnConstraints hgrow="ALWAYS"
                               minWidth="260"/>
        </columnConstraints>

        <VBox spacing="6"
              GridPane.rowIndex="0"
              GridPane.columnIndex="0">
            <Label text="Date format:" styleClass="modern-label-body"/>
            <ComboBox fx:id="dateFormatBox"
                      minWidth="260">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="MMMM d, yyyy"/>
                            <String fx:value="yyyy-MM-dd"/>
                            <String fx:value="MM/dd/yyyy"/>
                            <String fx:value="dd/MM/yyyy"/>
                        </FXCollections>
                    </items>
            </ComboBox>

            <Label fx:id="dateFormatPreview"
                   text="Preview: 25/12/2023"
                   styleClass="modern-label-caption"
                   style="-fx-font-style: italic;"/>
        </VBox>

        <VBox spacing="6"
              GridPane.rowIndex="0"
              GridPane.columnIndex="1">
            <Label text="Time format:" styleClass="modern-label-body"/>
            <ComboBox fx:id="timeFormatBox"
                      minWidth="260">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="h:mm a"/>
                        <String fx:value="HH:mm"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label fx:id="timeFormatPreview"
                   text="Preview: 14:30"
                   styleClass="modern-label-caption"
                   style="-fx-font-style: italic;"/>
        </VBox>
    </GridPane>

    <VBox spacing="4"/>
    <Label text="Change Password"
           styleClass="modern-label-heading"/>

    <Separator/>
    <VBox spacing="12">

        <VBox spacing="6">
            <Label text="Old password:" styleClass="modern-label-body"/>
            <PasswordField fx:id="oldPasswordField"
                           styleClass="modern-text-field"/>
        </VBox>

        <VBox spacing="6">
            <Label text="New password:" styleClass="modern-label-body"/>
            <PasswordField fx:id="newPasswordField"
                           styleClass="modern-text-field"/>
        </VBox>

        <VBox spacing="6">
            <Label text="Confirm new password:" styleClass="modern-label-body"/>
            <PasswordField fx:id="confirmPasswordField"
                           styleClass="modern-text-field"/>
        </VBox>
    </VBox>

    <HBox alignment="CENTER_RIGHT"
          spacing="12">

        <padding>
            <Insets top="14"/>
        </padding>

        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Close"
                onAction="#onClose"
                minWidth="110"
                styleClass="modern-button-secondary"/>
        <Button text="Save Changes"
                onAction="#onSave"
                minWidth="130"
                styleClass="modern-button"/>
    </HBox>
</VBox>
