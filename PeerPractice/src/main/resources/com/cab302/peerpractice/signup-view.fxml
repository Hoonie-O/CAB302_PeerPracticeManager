<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           stylesheets="@styles/modern.css"
           style="-fx-background-color: -fx-background;"
           alignment="CENTER">
<VBox fx:controller="com.cab302.peerpractice.Controllers.SignupController"
      spacing="18"
      alignment="TOP_CENTER"
      styleClass="modern-card"
      maxWidth="450"
      minWidth="400">

    <padding>
        <Insets top="40"
                right="40"
                bottom="40"
                left="40"/>
    </padding>

    <Label text="Create Account"
           styleClass="modern-label-title">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <Label text="Join us to get started"
           styleClass="modern-label-caption">
        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
    </Label>

    <VBox spacing="12">
        <TextField fx:id="firstNameField"
                   styleClass="modern-text-field"
                   promptText="First Name"
                   prefWidth="320"/>
        <TextField fx:id="lastNameField"
                   styleClass="modern-text-field"
                   promptText="Last Name"
                   prefWidth="320"/>
        <TextField fx:id="usernameField"
                   styleClass="modern-text-field"
                   promptText="Username"
                   prefWidth="320"/>
        <TextField fx:id="emailField"
                   styleClass="modern-text-field"
                   promptText="Email"
                   prefWidth="320"/>
        <TextField fx:id="institutionField"
                   styleClass="modern-text-field"
                   promptText="Institution or School"
                   prefWidth="320"/>
        <PasswordField fx:id="passwordField"
                       styleClass="modern-text-field"
                       promptText="Password"
                       prefWidth="320"/>
        <PasswordField fx:id="confirmPasswordField"
                       styleClass="modern-text-field"
                       promptText="Confirm password"
                       prefWidth="320"/>
    </VBox>

    <Button fx:id="signupButton"
            text="Create Account"
            styleClass="modern-button"
            onAction="#onSignupButton"
            maxWidth="Infinity">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </Button>

    <HBox spacing="6"
          alignment="CENTER">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
        <Label text="Already have an account?"
               styleClass="modern-label-body"/>
        <Hyperlink fx:id="backButton"
                   text="Sign in"
                   style="-fx-font-weight: 600;"
                   onAction="#onBackToLogin"/>
    </HBox>

    <Label fx:id="messageLabel"
           textFill="red"
           wrapText="true"
           maxWidth="Infinity"/>

</VBox>
</StackPane>
