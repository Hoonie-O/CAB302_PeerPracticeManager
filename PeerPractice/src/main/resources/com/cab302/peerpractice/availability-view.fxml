<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cab302.peerpractice.Controllers.AvailabilityController"
            prefWidth="1280"
            prefHeight="720"
            stylesheets="@styles/modern.css">

    <!-- Top Header -->
    <top>
        <fx:include source="header-layout.fxml" fx:id="header"/>
    </top>

    <!-- Left Sidebar -->
    <left>
        <fx:include source="sidebar-layout.fxml" fx:id="menu"/>
    </left>

    <!-- Right Sidebar -->
    <right>
        <fx:include source="profile-layout.fxml" fx:id="profile"/>
    </right>

    <!-- Center: Availability Calendar -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="0" styleClass="calendar-container">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>

            <!-- Title Section -->
            <Label text="Select Your Available Dates"
                   styleClass="modern-label-title">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>

            <Label text="Mark the days you're available for study sessions"
                   styleClass="modern-label-caption">
                <VBox.margin>
                    <Insets bottom="30"/>
                </VBox.margin>
            </Label>

            <!-- Month navigation with modern styling -->
            <HBox alignment="CENTER" spacing="16" styleClass="calendar-header">
                <Button fx:id="prevButton"
                        onAction="#onPreviousMonth"
                        text="←"
                        styleClass="calendar-nav-button"/>

                <Label fx:id="monthYearLabel"
                       text="Month Year"
                       styleClass="calendar-month-label"/>

                <Button fx:id="nextButton"
                        onAction="#onNextMonth"
                        text="→"
                        styleClass="calendar-nav-button"/>
            </HBox>

            <!-- Calendar grid with improved layout -->
            <StackPane VBox.vgrow="ALWAYS">
                <GridPane fx:id="calendarGrid"
                          alignment="CENTER"
                          gridLinesVisible="false"
                          styleClass="calendar-grid">
                    <padding>
                        <Insets top="20" left="10" right="10" bottom="10"/>
                    </padding>
                </GridPane>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
