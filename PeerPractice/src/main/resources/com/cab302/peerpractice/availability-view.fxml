<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cab302.peerpractice.Controllers.AvailabilityController"
            prefWidth="1280"
            prefHeight="720"
            stylesheets="@styles/modern.css">

    <!-- Top Header -->
    <top>
        <fx:include source="header-layout.fxml" fx:id="header"/>
    </top>

    <!-- Left Sidebar -->
    <left>
        <fx:include source="sidebar-layout.fxml" fx:id="menu"/>
    </left>

    <!-- Right Sidebar -->
    <right>
        <fx:include source="profile-layout.fxml" fx:id="profile"/>
    </right>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20" styleClass="calendar-container" VBox.vgrow="ALWAYS" maxWidth="Infinity">
            <padding>
                <Insets top="30" left="30" right="30" bottom="30"/>
            </padding>

            <VBox alignment="CENTER" spacing="8">
                <Label text="Select Your Available Dates"
                       styleClass="modern-label-title"
                       style="-fx-font-size: 28px;"/>

                <Label text="Mark the days you're available for study sessions"
                       styleClass="modern-label-caption"
                       style="-fx-font-size: 15px;"/>
            </VBox>

            <HBox alignment="CENTER" spacing="20" styleClass="calendar-header">
                <Button fx:id="prevButton"
                        onAction="#onPreviousMonth"
                        text="← Previous"
                        styleClass="calendar-nav-button"
                        minWidth="100"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="monthYearLabel"
                       text="Month Year"
                       styleClass="calendar-month-label"
                       style="-fx-font-size: 24px;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="nextButton"
                        onAction="#onNextMonth"
                        text="Next →"
                        styleClass="calendar-nav-button"
                        minWidth="100"/>
            </HBox>

            <StackPane VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity">
                <GridPane fx:id="calendarGrid"
                          alignment="CENTER"
                          gridLinesVisible="false"
                          styleClass="calendar-grid"
                          hgap="6"
                          vgap="6"
                          maxWidth="Infinity"
                          maxHeight="Infinity">
                    <padding>
                        <Insets top="10" left="10" right="10" bottom="10"/>
                    </padding>
                </GridPane>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
