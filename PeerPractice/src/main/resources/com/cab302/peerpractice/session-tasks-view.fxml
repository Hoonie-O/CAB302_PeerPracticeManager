<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cab302.peerpractice.Controllers.SessionTaskController"
            prefWidth="1280"
            prefHeight="720">

    <top>
        <fx:include source="header-layout.fxml" fx:id="header"/>
    </top>

    <left>
        <fx:include source="sidebar-layout.fxml" fx:id="menu"/>
    </left>

    <right>
        <fx:include source="profile-layout.fxml" fx:id="profile"/>
    </right>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label fx:id="sessionTitleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" 
                   text="Tasks for: [Session Name]"/>

            <VBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #f9f9f9; -fx-padding: 15;">
                <Label text="Add/Edit Task" style="-fx-font-weight: bold;"/>
                
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="100"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                        <ColumnConstraints minWidth="100" prefWidth="100"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                    </columnConstraints>

                    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="taskTitleField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                              promptText="Enter task title"/>

                    <Label text="Assignee:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="assigneeComboBox" GridPane.columnIndex="3" GridPane.rowIndex="0" 
                             promptText="Select assignee" prefWidth="200"/>

                    <Label text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="deadlineField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                              promptText="yyyy-MM-dd HH:mm"/>

                </GridPane>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="backButton" text="â† Back"
                           style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
                    <Button fx:id="createTaskButton" text="Create Task"
                           style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button fx:id="updateTaskButton" text="Update Task"
                           style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    <Button fx:id="deleteTaskButton" text="Delete Task"
                           style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                    <Button fx:id="markCompleteButton" text="Mark Complete"
                           style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
                </HBox>

                <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false"/>
            </VBox>

            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Session Tasks" style="-fx-font-weight: bold;"/>
                
                <TableView fx:id="taskTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
                        <TableColumn fx:id="assigneeColumn" text="Assignee" prefWidth="120"/>
                        <TableColumn fx:id="deadlineColumn" text="Deadline" prefWidth="150"/>
                        <TableColumn fx:id="completedColumn" text="Completed" prefWidth="80"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

        </VBox>
    </center>
</BorderPane>
