<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cab302.peerpractice.Controllers.SessionTaskController"
            prefWidth="1280"
            prefHeight="720"
            stylesheets="@styles/modern.css">

    <top>
        <fx:include source="header-layout.fxml" fx:id="header"/>
    </top>

    <left>
        <fx:include source="sidebar-layout.fxml" fx:id="menu"/>
    </left>

    <right>
        <fx:include source="profile-layout.fxml" fx:id="profile"/>
    </right>

    <center>
        <VBox spacing="24" style="-fx-background-color: -fx-background;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label fx:id="sessionTitleLabel"
                   text="Tasks for: [Session Name]"
                   styleClass="modern-label-title"
                   style="-fx-font-size: 26px;"/>

            <VBox spacing="16" styleClass="modern-card" maxWidth="Infinity">
                <Label text="Add/Edit Task" styleClass="modern-label-heading"/>
                
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="100"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                        <ColumnConstraints minWidth="100" prefWidth="100"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                    </columnConstraints>

                    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                           styleClass="modern-label-body"/>
                    <TextField fx:id="taskTitleField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                              promptText="Enter task title"
                              styleClass="modern-text-field"/>

                    <Label text="Assignee:" GridPane.columnIndex="2" GridPane.rowIndex="0"
                           styleClass="modern-label-body"/>
                    <ComboBox fx:id="assigneeComboBox" GridPane.columnIndex="3" GridPane.rowIndex="0"
                             promptText="Select assignee" prefWidth="200"/>

                    <Label text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                           styleClass="modern-label-body"/>
                    <TextField fx:id="deadlineField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                              promptText="yyyy-MM-dd HH:mm"
                              styleClass="modern-text-field"/>

                </GridPane>

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Button fx:id="createTaskButton" text="Create Task"
                           styleClass="modern-button"/>
                    <Button fx:id="updateTaskButton" text="Update Task"
                           styleClass="modern-button-accent"/>
                    <Button fx:id="deleteTaskButton" text="Delete Task"
                           style="-fx-background-color: -fx-danger; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                    <Button fx:id="markCompleteButton" text="Mark Complete"
                           styleClass="modern-button-secondary"/>
                </HBox>

                <Label fx:id="errorLabel" style="-fx-text-fill: -fx-danger;" visible="false"/>
            </VBox>

            <VBox spacing="16" VBox.vgrow="ALWAYS">
                <Label text="Session Tasks" styleClass="modern-label-heading" style="-fx-font-size: 18px;"/>

                <TableView fx:id="taskTable" VBox.vgrow="ALWAYS" minHeight="400">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="200" minWidth="150"/>
                        <TableColumn fx:id="assigneeColumn" text="Assignee" prefWidth="120"/>
                        <TableColumn fx:id="deadlineColumn" text="Deadline" prefWidth="150"/>
                        <TableColumn fx:id="completedColumn" text="Completed" prefWidth="80"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
