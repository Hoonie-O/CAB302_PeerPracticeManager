<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cab302.peerpractice.Controllers.GroupCalendarController"
      alignment="TOP_CENTER"
      spacing="0"
      styleClass="calendar-container"
      stylesheets="@styles/modern.css">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <!-- Month navigation with modern styling -->
    <HBox alignment="CENTER" spacing="16" styleClass="calendar-header">
        <Button fx:id="prevButton"
                onAction="#onPreviousMonth"
                text="←"
                styleClass="calendar-nav-button"/>

        <Label fx:id="monthYearLabel"
               text="Month Year"
               styleClass="calendar-month-label"/>

        <Button fx:id="nextButton"
                onAction="#onNextMonth"
                text="→"
                styleClass="calendar-nav-button"/>
    </HBox>

    <!-- Calendar grid with improved layout -->
    <StackPane VBox.vgrow="ALWAYS">
        <GridPane fx:id="calendarGrid"
                  alignment="CENTER"
                  gridLinesVisible="false"
                  styleClass="calendar-grid">
            <padding>
                <Insets top="20" left="10" right="10" bottom="10"/>
            </padding>
        </GridPane>
    </StackPane>
</VBox>
