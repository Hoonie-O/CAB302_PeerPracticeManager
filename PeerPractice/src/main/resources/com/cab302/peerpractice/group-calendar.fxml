<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cab302.peerpractice.Controllers.GroupCalendarController"
      alignment="TOP_CENTER"
      spacing="16"
      styleClass="calendar-container"
      stylesheets="@styles/modern.css"
      VBox.vgrow="ALWAYS">

    <padding>
        <Insets top="24" left="24" right="24" bottom="24"/>
    </padding>

    <HBox alignment="CENTER" spacing="20" styleClass="calendar-header">
        <Button fx:id="prevButton"
                onAction="#onPreviousMonth"
                text="← Previous"
                styleClass="calendar-nav-button"
                minWidth="100"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label fx:id="monthYearLabel"
               text="Month Year"
               styleClass="calendar-month-label"
               style="-fx-font-size: 24px;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="nextButton"
                onAction="#onNextMonth"
                text="Next →"
                styleClass="calendar-nav-button"
                minWidth="100"/>
    </HBox>

    <StackPane VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity">
        <GridPane fx:id="calendarGrid"
                  alignment="CENTER"
                  gridLinesVisible="false"
                  styleClass="calendar-grid"
                  hgap="6"
                  vgap="6"
                  maxWidth="Infinity"
                  maxHeight="Infinity">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>
        </GridPane>
    </StackPane>
</VBox>
