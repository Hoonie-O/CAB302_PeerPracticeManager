<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cab302.peerpractice.Controllers.GroupCalendarController"
      alignment="TOP_CENTER" spacing="12">
    <padding>
        <!-- A touch of space under the tabs -->
        <Insets top="12" left="0" right="0" bottom="0"/>
    </padding>

    <!-- Month navigation -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="prevButton" onAction="#onPreviousMonth" text="&lt;"/>
        <Label fx:id="monthYearLabel" text="Month Year">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Button fx:id="nextButton" onAction="#onNextMonth" text="&gt;"/>
    </HBox>

    <!-- Calendar grid centred in available space -->
    <StackPane VBox.vgrow="ALWAYS">
        <GridPane fx:id="calendarGrid"
                  alignment="CENTER"
                  gridLinesVisible="false"
                  hgap="1" vgap="1">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>
        </GridPane>
    </StackPane>
</VBox>